{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build the project",
            "identifier": "build",
            "type": "shell",
            "command": "mix",
            "args": [
                "compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "Start the server",
            "dependsOn": "build",
            "type": "shell",
            "command": "mix",
            "isBackground": true,
            "promptOnClose": true,
            "args": [
                "phx.server"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "Make migration",
            "type": "shell",
            "command": "mix",
            "args": [
                "ecto.migrate"
            ]
        },
        {
            "label": "Lint project",
            "type": "shell",
            "command": "mix",
            "args": [
                "credo",
                "--strict"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            }
        }
    ]
}
